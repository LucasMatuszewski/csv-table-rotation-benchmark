# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TOML files (Cargo.toml, pyproject.toml)
[*.toml]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true 